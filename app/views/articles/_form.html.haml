.container
  %ul
    - article.errors.full_messages.each do |message|
      %li= message
  -# = form_with(model: article , local: true, data: { turbo: false } ) do |f|
  = form_with(model: article , local: true ) do |f|
    %div
      = f.label :eyecatch, 'アイキャッチ'
    %div
      = f.file_field :eyecatch
    %div
      = f.label :title, 'タイトル'
    %div
      = f.text_field :title, class: 'text'
    %div
      = f.label :content, '内容', for: 'article_content'
    %div
      = f.rich_text_area :content, id: 'article_content' 
      -# = f.text_area :content, class: 'text'
    = f.submit '保存', class: 'btn-primary'
